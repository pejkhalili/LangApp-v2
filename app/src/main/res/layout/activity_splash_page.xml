<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/nsplash_back"
    tools:context="com.chapdast.ventures.activities.SplashPage"
    android:id="@+id/splash_layout">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/pageDots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/sp3"
            layout="@layout/splash_screen_three"
            >

        </include>

        <include
            android:id="@+id/sp4"
            layout="@layout/splash_screen_four"
            android:visibility="gone">

        </include>

        <include
            android:id="@+id/sp5"
            layout="@layout/splash_screen_five"
            android:visibility="gone">

        </include>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pageDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/sp_p1"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:src="@mipmap/dot" />

        <ImageView
            android:id="@+id/sp_p2"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:src="@mipmap/yellow_dot" />

        <ImageView
            android:id="@+id/sp_p3"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:src="@mipmap/yellow_dot" />

        <ImageView
            android:id="@+id/sp_p4"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:src="@mipmap/yellow_dot" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
