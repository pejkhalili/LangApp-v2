<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dialogs_back"
    android:paddingTop="100dp"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    android:paddingBottom="100dp"
    >
    <LinearLayout
        android:id="@+id/us_lay_elm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/box"
        android:padding="5dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELEMENTARY LEVEL"
            android:textColor="@color/mkWhite"/>
        <TextView
            android:id="@+id/us_elm"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/mkWhite"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/us_lay_inter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/box"
        android:padding="5dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTERMADIATE LEVEL"
            android:textColor="@color/mkWhite"/>
        <TextView
            android:id="@+id/us_inter"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/mkWhite"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/us_lay_adv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/box"
        android:padding="5dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADVANCED LEVEL"
            android:textColor="@color/mkWhite"/>
        <TextView
            android:id="@+id/us_adv"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/mkWhite"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/us_lay_504"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/box"
        android:padding="5dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="504 ESSENTIAL WORDS"
            android:textColor="@color/mkWhite"/>
        <TextView
            android:id="@+id/us_504"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/mkWhite"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/us_lay_tofel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/box"
        android:padding="5dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1001 TOFEL VOCAB."
            android:textColor="@color/mkWhite"/>
        <TextView
            android:id="@+id/us_tofel"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/mkWhite"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/us_no_stat"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="5dp"
        android:layout_margin="5dp">
        <TextView
            android:background="@drawable/box_red"
            android:id="@+id/us_no_stat_text"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_stat_empty"
            android:textColor="@color/mkWhite"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/us_no_stat_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/confirm"
            android:background="@drawable/box_white"
            android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>