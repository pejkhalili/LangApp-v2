<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chapdast.ventures.Videos"
    android:orientation="vertical"
    android:background="@mipmap/back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp">
        <ImageView
            android:id="@+id/vp_side_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/back_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/vp_title"
            android:layout_height="wrap_content"
            android:text="@string/videos"
            android:textSize="30dp"

            android:paddingEnd="15dp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>
    <TextView
        android:id="@+id/vp_sutitle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_desire_video_to_watch"
        android:textStyle="bold"
        android:background="@drawable/box"
        android:textColor="@color/mkWhite"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="5dp"/>
    <GridView
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:gravity="center"
        android:numColumns="2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/vp_list"
        android:divider="@color/mkDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>


</LinearLayout>
