<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:id="@+id/plist_bigLink"
    android:layout_margin="10dp"
    android:padding="3dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/plist_tumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:src="@drawable/box_white" />
    <LinearLayout

        android:layout_weight="1"
        android:id="@+id/plist_link"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/plist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title"
            android:textColor="@color/mkWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plist_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media Level"
            android:textColor="@color/mkGray" />


    </LinearLayout>
        <ProgressBar
            android:layout_marginEnd="5dp"
            android:id="@+id/plist_progress"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:indeterminateDrawable="@drawable/progress"/>
    </LinearLayout>

</LinearLayout>